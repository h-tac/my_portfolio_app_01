<% content_for :title do %>
  <title>パスワード再設定 | 自転車空気入れマップ</title>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>パスワード再設定</h1>
      <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <p><%= @user.email %></p>
        </div>
        <div class="mb-3">
          <%= f.label :password, '新しいパスワード（半角英数字8文字以上）', class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control', required: true %>

          <% if @user.errors.include?(:password) %>
            <p class="text-danger"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, '新しいパスワード（確認）', class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control', required: true %>

          <% if @user.errors.include?(:password_confirmation) %>
            <p class="text-danger"><%= @user.errors[:password_confirmation].first %></p>
          <% end %>
        </div>
        <%= f.submit t('helpers.submit.update'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
