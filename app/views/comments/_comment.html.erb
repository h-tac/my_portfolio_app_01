<div class="card mb-3" id="comment_<%= comment.id %>">
  <div class="card-body">
    <p class="card-text"><%= comment.content %></p>
    <p class="card-text">
      <%= "#{comment.created_at.strftime('%Y/%m/%d %H:%M')}　#{comment.user&.name || '(Anonymous)'}" %>
    </p>
    <% if logged_in? && (current_user.role == 'admin' || current_user.id == comment.user_id) %>
      <%= link_to comment_path(comment), method: :delete, remote: true, data: { confirm: '本当に削除してよろしいですか？' } do %>
        <button class="btn btn-danger">削除</button>
      <% end %>
    <% end %>
  </div>
</div>
