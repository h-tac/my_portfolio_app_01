<% content_for :title do %>
  <title>新規アカウント登録 | 自転車空気入れマップ</title>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>新規アカウント登録</h1>
      <%= form_with model: @user, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>

          <% if @user.errors.include?(:name) %>
            <p class="text-danger"><%= @user.errors[:name].first %></p>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>

          <% if @user.errors.include?(:email) %>
            <p class="text-danger"><%= @user.errors[:email].first %></p>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>

          <% if @user.errors.include?(:password) %>
            <p class="text-danger"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>

          <% if @user.errors.include?(:password_confirmation) %>
            <p class="text-danger"><%= @user.errors[:password_confirmation].first %></p>
          <% end %>
        </div>
        <%= f.submit t('helpers.submit.register'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
