<% content_for :title do %>
  <title>アカウント編集 | 自転車空気入れマップ</title>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>アカウント情報更新</h1>
      <%= form_with model: @user, url: users_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>

          <% if @user.errors.include?(:name) %>
            <p class="text-danger"><%= @user.errors[:name].first %></p>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :old_password, '現在のパスワード（パスワードを変更したい場合のみ入力してください）', class: 'form-label' %>
          <%= f.password_field :old_password, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password, '新しいパスワード（半角英数字8文字以上）', class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>

          <% if @user.errors.include?(:password) %>
            <p class="text-danger"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, '新しいパスワード（確認）', class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>

          <% if @user.errors.include?(:password_confirmation) %>
            <p class="text-danger"><%= @user.errors[:password_confirmation].first %></p>
          <% end %>
        </div>
        <%= f.submit t('helpers.submit.update'), class: 'btn btn-primary' %>
      <% end %>

      <hr>

      <h1>メールアドレス変更</h1>
      <div class="mb-3">
        <p>現在のメールアドレス　<%= @user.email %></p>
      </div>
      <%= form_with url: email_changes_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :new_email, '新しいメールアドレス', class: 'form-label' %>
          <%= f.email_field :new_email, class: 'form-control', required: true %>

          <% if @user.errors.include?(:new_email) %>
            <p class="text-danger"><%= @user.errors[:new_email].first %></p>
          <% end %>
        </div>
        <%= f.submit t('helpers.submit.send'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
