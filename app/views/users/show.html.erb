<% content_for :title do %>
  <title>アカウント | 自転車空気入れマップ</title>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto mt-3 mb-5">
      <h1>アカウント</h1>
      <div>
        <p class="text-secondary">ハンドルネーム</p>
        <p class="ms-3"><%= current_user.name %></p>
      </div>
      <div>
        <p class="text-secondary">メールアドレス</p>
        <p class="ms-3"><%= current_user.email %></p>
      </div>
      <div>
        <p class="text-secondary">アカウント登録日</p>
        <p class="ms-3"><%= current_user.created_at.strftime('%Y/%m/%d') %></p>
      </div>
      <div>
        <%= link_to edit_users_path do %>
          <button class="btn btn-primary col-12 col-lg-2">編集</button>
        <% end %>
      </div>
      <div class="d-flex justify-content-end mt-3">
        <%= link_to 'アカウント削除はこちら', delete_confirm_users_path, class: 'text-decoration-none' %>
      </div>
    </div>
  </div>
</div>
