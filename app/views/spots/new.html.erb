<% content_for :title do %>
  <title>施設登録 | 自転車空気入れマップ</title>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>施設登録</h1>
      <%= form_with model: @spot, local: true do |f| %>
        <%= f.hidden_field :address_prefecture, value: @prefecture %>
        <%= f.hidden_field :address_city, value: @city %>
        <%= f.hidden_field :address_detail, value: @address_detail %>
        <%= f.hidden_field :latitude, value: params[:lat] %>
        <%= f.hidden_field :longitude, value: params[:lng] %>

        <div class="mb-3">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <p>住所: <%= @full_address %></p>

        <div class="mb-3">
          <%= f.label :fee, class: 'form-label', for: nil %>
          <% Spot.fees.each do |fee_key, fee_value| %>
            <div>
              <%= f.radio_button :fee, fee_value, checked: fee_key == "free" %>
              <%= f.label "fee_#{fee_value}", Spot.fees_i18n[fee_key] %>
            </div>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.fields_for :spots_pumps do |form| %>
            <%= form.label '空気入れの動力', class: 'form-label', for: nil %>
            <% @pumps.each_with_index do |pump, index| %>
              <div>
                <%= check_box_tag 'spot[spots_pumps_attributes][][pump_id]', pump.id, form.object.pump_id == pump.id, id: "spot_spots_pumps_attributes_#{index}_pump_id" %>
                <%= label_tag "spot_spots_pumps_attributes_#{index}_pump_id", pump.usage %>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.fields_for :spots_valves do |form| %>
            <%= form.label '対応するバルブの形状', class: 'form-label', for: nil %>
            <% @valves.each_with_index do |valve, index| %>
              <div>
                <%= check_box_tag 'spot[spots_valves_attributes][][valve_id]', valve.id, form.object.valve_id == valve.id, id: "spot_spots_valves_attributes_#{index}_valve_id" %>
                <%= label_tag "spot_spots_valves_attributes_#{index}_valve_id", valve.kind %>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label '施設の営業時間', class: 'form-label', for: nil %>
          <%= f.time_field :opening_time, class: 'form-control' %>
          〜
          <%= f.time_field :closing_time, class: 'form-control' %>
        </div>

        <%= f.submit t('helpers.submit.register'), class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
