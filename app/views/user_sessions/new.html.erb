<% content_for :title do %>
  <title>ログイン | 自転車空気入れマップ</title>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-4 mx-auto mt-4">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center">ログイン</h1>
          <%= form_with local: true do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <%= f.submit t('helpers.submit.login'), class: 'btn btn-primary col-12' %>
          <% end %>
          <p class="card-text mt-2 text-center">
            <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path, class: 'text-decoration-none' %>
          </p>
        </div>
      </div>

      <hr class="mt-4">

      <div class="card border-0">
        <div class="card-body">
          <%= link_to new_users_path do %>
            <button class="btn btn-primary col-12">新規アカウント登録はこちら</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
